<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
            <%= simple_form_for(@worker) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :first_name %>
                <%= f.input :last_name %>
                <%= f.input :status %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, { class: 'button-esante btn-sm' } %>
              </div>
            <% end %>
        </div>
    </div>
</div>

