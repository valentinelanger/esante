<div class="form">
  <%= simple_form_for(@worker) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :status, collection: Worker::STATUSES, label: false, prompt: "select a status" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, { class: 'button-esante btn-sm' } %>
      <%= link_to 'Back', workers_path, class: 'btn button-esante-default' %>
    </div>
  <% end %>
</div>

