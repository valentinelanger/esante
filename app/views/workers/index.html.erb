<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
      <div class="col-xs-12">
        <div class="workers-list">
          <%= link_to 'Add a worker', new_worker_path, { class: 'button-esante btn-sm'} %>
          <table class="worker-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Status</th>
                <th>Shifts number this month </th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @workers.each do |worker| %>
                <tr>
                  <td><%= worker.id %></td>
                  <td><%= worker.first_name %></td>
                  <td><%= worker.last_name %></td>
                  <td><%= worker.status %></td>
                  <td><%= worker.nb_shifts %></td>
                  <td>
                    <%= link_to edit_worker_path(worker) do %>
                      <%= icon('pencil', class: 'edit-worker') %>
                    <% end%>
                    <%= link_to new_shift_path(:shift => { :worker_id => worker.id }) do %>
                      <%= icon('plus', class: 'add-worker-shift') %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
  </div>
</div>


