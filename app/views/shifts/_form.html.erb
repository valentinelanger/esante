<div class="form">
    <%= simple_form_for(@shift) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :planning_id %>
        <%= f.input :worker_id %>
        <%= f.input :start_date %>
      </div>

      <div class="form-actions">
        <%= link_to 'cancel', shifts_path, class: 'btn btn-default button-esante-default' %>
        <%= f.button :submit, { value: 'save', class: 'btn button-esante' } %>
      </div>
    <% end %>
</div>

