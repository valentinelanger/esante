<div class="form">
    <%= simple_form_for(@shift) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :planning_id, label: false, placeholder: "planning ID" %>
        <%= f.select :worker_id, Worker.all.map { |w| [w.name, w.id] }, {}, { multiple:false, class: 'selectize' } %>
        <%= f.input :start_date, as: :date, label: "Shift date:", order: [:day, :month, :year] %>
      </div>

      <div class="form-actions">
        <%= link_to 'cancel', shifts_path, class: 'btn btn-default button-esante-default' %>
        <%= f.button :submit, { value: 'save', class: 'btn button-esante' } %>
      </div>
    <% end %>
</div>

